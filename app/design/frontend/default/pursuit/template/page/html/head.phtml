		main$ = main$.replace(".html", "");
		main$ = main$.split("/");
		main$ = main$[main$.length];

		j$('a.side-nav.level-1.'+ main$).css("font-family", "AvenirLTW02-95BlackObli");
		j$('a.side-nav.level-1.' + main$).css("color", "red");
		j$('a.side-nav.level-2.' + main$).css("display", "block");

		section$ = window.location.pathname.replace("/shop/" + main$ + "/", "");
		section$ = section$.replace(".html", "");

    }else {
		section$ = getQueryVariable('q');
    	switch(section$) {

			case 'road':
			case 'track':
			case 'classic':
    		case 'modern':
    		case 'njs':

    			j$('ul.side-nav-level2.shop-by-style').css("display", "block");
